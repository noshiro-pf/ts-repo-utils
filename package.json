{
  "name": "ts-repo-utils",
  "version": "6.0.0",
  "private": false,
  "keywords": [
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noshiro-pf/ts-repo-utils.git"
  },
  "license": "Apache-2.0",
  "author": "noshiro-pf <noshiro.pf@gmail.com>",
  "sideEffects": true,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/type.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/type.d.mts",
  "bin": {
    "assert-repo-is-clean": "./src/cmd/assert-repo-is-clean.mts",
    "check-should-run-type-checks": "./src/cmd/check-should-run-type-checks.mts",
    "format-diff-from": "./src/cmd/format-diff-from.mts",
    "format-untracked": "./src/cmd/format-untracked.mts",
    "gen-index-ts": "./src/cmd/gen-index-ts.mts"
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsx ./scripts/cmd/build.mjs",
    "check-all": "tsx ./scripts/cmd/check-all.mjs",
    "check:ext": "tsx ./scripts/cmd/check-ext.mjs",
    "cspell": "cspell \"**\" --gitignore --gitignore-root ./ --no-progress",
    "doc": "tsx ./scripts/cmd/gen-docs.mjs",
    "fmt": "npm exec -- format-diff-from origin/main",
    "fmt:full": "prettier --write .",
    "gi": "npm exec -- gen-index-ts ./src/functions --index-ext .mts --export-ext .mjs --target-ext .mts --target-ext .tsx --fmt 'npm run fmt'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "md": "markdownlint-cli2",
    "prepare-release": "run-s sync-cli-versions fmt build doc",
    "sync-cli-versions": "tsx scripts/cmd/sync-cli-versions.mts",
    "test": "npm run z:vitest -- run",
    "test:cov": "npm run z:vitest -- run --coverage",
    "test:cov:ui": "vite preview --outDir ./coverage",
    "test:ui": "npm run z:vitest -- --ui",
    "testw": "npm run z:vitest -- watch",
    "tsc": "tsc --noEmit",
    "tscw": "tsc --noEmit --watch -p ./tsconfig.json",
    "type-check": "tsc --noEmit",
    "update-packages": "npx npm-check-updates -u --install always",
    "z:vitest": "vitest --config ./configs/vitest.config.ts"
  },
  "dependencies": {
    "@types/micromatch": "^4.0.9",
    "cmd-ts": "^0.13.0",
    "fast-glob": "^3.3.3",
    "micromatch": "^4.0.8",
    "prettier": "^3.6.2",
    "ts-data-forge": "^3.0.5",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cspell": "^9.2.0",
    "dedent": "^1.6.0",
    "eslint": "^9.33.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-array-func": "5.0.2",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prefer-arrow-functions": "3.6.2",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "markdownlint-cli2": "^0.18.1",
    "npm-run-all2": "^8.0.4",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "rollup": "^4.46.2",
    "semantic-release": "^24.2.7",
    "ts-type-forge": "^2.1.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
